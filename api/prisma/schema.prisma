generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

enum PropostaStatus {
    ENVIADA
    EMANALISE
    APROVADA
    REJEITADA
}

enum AplicacaoStatus {
    ONLINE
    DESENVOLVIMENTO
    PLANEJAMENTO
}

enum journalType {
    REFLEXAO
    APRENDIZADO
    GRATIDAO
    META
    PESSOAL
}

model User {
    id        String    @id @default(auto()) @map("_id") @db.ObjectId
    email     String    @unique
    password  String
    name      String?
    journals  Journal[]
    createdAt DateTime  @default(now())
    userId    String?   @db.ObjectId
}

model UserRole {
    id     String  @id @default(auto()) @map("_id") @db.ObjectId
    userId String? @db.ObjectId
}

model Journal {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    title     String
    content   String?
    tag       journalType?
    author    User     @relation(fields: [authorId], references: [id])
    authorId  String   @db.ObjectId
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Propostas {
    id        String          @id @default(auto()) @map("_id") @db.ObjectId
    cliente   String
    conteudo  String
    valor     Int
    createdAt DateTime        @default(now())
    enviadoEm DateTime        @updatedAt
    validoAte DateTime        @updatedAt
    status    PropostaStatus?
}

model Negocios {
    id String @id @default(auto()) @map("_id") @db.ObjectId
}

model Aplicacoes {
    id            String           @id @default(auto()) @map("_id") @db.ObjectId
    image         String // link da imagem de fundo do app
    online        Boolean // true ou false
    linkAcesso    String
    linkRepo      String // link de acesso ao github do projeto
    criadoEm      DateTime         @default(now())
    custoMensal   Int // colocar os custos totais envolvidos para manter o projeto rodando
    retornoMensal Int // Colocar os retornos mensais deste projeto 
    status        AplicacaoStatus? // vai retornar o endpoint "health" e
    // se o endpoint code retornar 200 ou um c√≥digo de sucesso, ele retorna o status Online no campo Status
}
